<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
<%- include('./partials/nav.ejs') %>
<article>
    <div class="info">
        <span><%= post.createdAt.toLocaleDateString() || 'no date' %></span>
        <div class="button-container">
            <button data-id="<%= post.id %>" class=""><i data-id="<%= post.id %>" class="fa-solid fa-trash"></i></button>
            <button><a href="/edit/<%= post.id %>"><i class="fa-solid fa-pen-to-square"></i></a></button>
        </div>
        <span><%= post.author %></span>
    </div>

    <h1><%= post.title%></h1>
    <p>
      <%= post.text%>
    </p>
</article>
</body>
<script>
  document.addEventListener('click', (e) => {
    const id = e.target?.dataset?.id || null;
    if(id) {
      fetch(`/posts/${id}`, {
        method: 'DELETE',
      }).then(() => window.location.href = '/posts');
    }
  })
</script>
</html>